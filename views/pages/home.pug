extends ../base.pug 

block variables
    - var template = 'home'

block content
   .home
    .home__wrapper
        .home__titles
            each collection, index in collections
                .home__titles__label=`${data.data.collection} ${Numbers(index)}`

                .home__titles__title=collection.data.title

        .home__gallery
            each media, index in data.gallery
                figure.home__gallery__media
                    img.home__gallery__media__image(alt=media.image.alt src=media.image.url)

        a.home__link(href=Link(data.data.collection))=data.data.button